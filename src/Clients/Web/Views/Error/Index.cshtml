@using Microsoft.AspNetCore.Mvc.Localization
@using Hermes.Client.Web.Constants
@using Hermes.Client.Web.Models.Error

@model ErrorViewModel

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = $"{Localizer.GetString(Resources.Error.Title)}{Model.PageTitleSuffix}";
}

<div class="container">
    <div class="d-flex flex-column align-items-center">
        @if (Model?.ShowStatusCode is true)
        {
            <h1>@Model.StatusCode</h1>
            <p class="font-weight-normal lead">@Model.Message</p>
        }

        <p>An error occurred while processing your request. ¯\(°_°)/¯</p>
        <p>Please wait a few minutes before you try again.</p>
    </div>
</div>