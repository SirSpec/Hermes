@using Microsoft.AspNetCore.Mvc.Localization
@using Hermes.Client.Web.Constants
@using Hermes.Client.Web.Models.Account
@model AccountViewModel

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer[Resources.Account.Title];
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">@Localizer[Resources.Account.FirstNameLabel]</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.FirstName</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">@Localizer[Resources.Account.LastNameLabel]</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.LastName</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">@Localizer[Resources.Account.EmailNameLabel]</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">@Model.Email</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">@Localizer[Resources.Account.RolesNameLabel]</p>
                        </div>
                        <div class="col-sm-9">
                            @foreach (var role in Model.Roles)
                            {
                                <p class="text-muted mb-0">@role</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>