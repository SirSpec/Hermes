{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "detail": "Build Solution",
            "command": "dotnet",
            "isBuildCommand": true,
            "type": "process",
            "icon": {
                "id": "extensions",
                "color": "terminal.ansiYellow"
            },
            "args": [
                "build",
                "${workspaceFolder}",
                "/property:GenerateFullPaths=true"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "test",
            "detail": "Test Solution",
            "command": "dotnet",
            "isTestCommand": true,
            "type": "process",
            "icon": {
                "id": "beaker",
                "color": "terminal.ansiMagenta"
            },
            "dependsOn": [
                "build"
            ],
            "args": [
                "test",
                "${workspaceFolder}",
                "/property:GenerateFullPaths=true"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "docker-compose up",
            "detail": "Set up local infrastructure",
            "type": "docker-compose",
            "icon": {
                "id": "arrow-up",
                "color": "terminal.ansiGreen"
            },
            "dockerCompose": {
                "up": {
                    "detached": true,
                    "build": true
                },
                "files": [
                    "${workspaceFolder}/docker-compose.yml",
                    "${workspaceFolder}/docker-compose.override.yml"
                ]
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "docker-compose down",
            "detail": "Destroy local infrastructure",
            "type": "docker-compose",
            "icon": {
                "id": "arrow-down",
                "color": "terminal.ansiRed"
            },
            "dockerCompose": {
                "down": {
                    "removeImages": "all",
                    "removeVolumes": true
                },
                "files": [
                    "${workspaceFolder}/docker-compose.yml"
                ]
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "build images",
            "detail": "Build docker images",
            "type": "shell",
            "icon": {
                "id": "package",
                "color": "terminal.ansiBlue"
            },
            "dependsOn": [
                "test"
            ],
            "dependsOrder": "sequence",
            "command": [
                "sh ${workspaceFolder}/build/build-images.sh"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}